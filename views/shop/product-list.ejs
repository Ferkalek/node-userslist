<%- include('../includes/head.ejs') %>
    <main class="container">
        <h1>Not Home page</h1>
        <p>List of all products</p>

        <% if (prods.length > 0) { %>
            <div class="grid">
                <% prods.forEach(prod => { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h2 class="product__title"><%= prod.title %></h2>
                        </header>
                        <div class="card__img">
                            <img src="<%= prod.imageUrl %>" alt="<%= prod.title %>">
                        </div>
                        <div class="card__item">
                            <h3 class="product__price"><%= prod.price %></h3>
                            <p class="product__description"><%= prod.description %></p>
                        </div>
                        <div class="card__action">
                            <a href="/products/<%= prod.id %>" class="btn">Details</a>
                            <%- include('../includes/add-to-cart.ejs', {prod}) %>
                        </div>
                    </article>
                <% }) %>
            </div>
        <% } else { %>
            <p>We do not have any products</p>
        <% } %>
    </main>
<%- include('../includes/footer.ejs') %>